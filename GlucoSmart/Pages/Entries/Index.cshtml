@page
@model GlucoSmart.Pages.Entries.IndexModel
@{
    ViewData["Title"] = "Recent Entries";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Recent Entries</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            @if (User.IsInRole("Doctor"))
            {
                <h4><a href="/Entries/Glucose/Index?username=@Model.Username">Glucose</a></h4>
            }
            @if (User.IsInRole("Patient"))
            {
                <h4><a href="/Entries/Glucose/Index">Glucose</a></h4>
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserGluEntries[0].BloodSugar)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserGluEntries[0].Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserGluEntries[0].Reading)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserGluEntries[0].Meal)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserGluEntries)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.BloodSugar)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Reading)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Meal)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
    <div class="col-md-4">
        <section>
            @if (User.IsInRole("Doctor"))
            {
                <h4><a href="/Entries/Exercise/Index?username=@Model.Username">Exercise</a></h4>
            }
            @if (User.IsInRole("Patient"))
            {
                <h4><a href="/Entries/Exercise/Index">Exercise</a></h4>
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserExEntries[0].Minutes)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserExEntries[0].Exercise)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserExEntries[0].Intensity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserExEntries[0].Date)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserExEntries)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Minutes)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Exercise)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Intensity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
    <div class="col-md-4">
        <section>
            @if (User.IsInRole("Doctor"))
            {
                <h4><a href="/Entries/Food/Index?username=@Model.Username">Food</a></h4>
            }
            @if (User.IsInRole("Patient"))
            {
                <h4><a href="/Entries/Food/Index">Food</a></h4>
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.UserFoodEntries[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserFoodEntries[0].Carbs)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserFoodEntries[0].Calories)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserFoodEntries[0].Date)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserFoodEntries)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carbs)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Calories)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>