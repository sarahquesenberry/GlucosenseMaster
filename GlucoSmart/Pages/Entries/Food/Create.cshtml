@page
@model GlucoSmart.Pages.Entries.Food.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>FoodEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FoodEntry.Name" class="control-label"></label>
                <input asp-for="FoodEntry.Name" class="form-control" value="@Model.Name"/>
                <span asp-validation-for="FoodEntry.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodEntry.Carbs" class="control-label"></label>
                <input asp-for="FoodEntry.Carbs" class="form-control" value="@Model.Carbs"/>
                <span asp-validation-for="FoodEntry.Carbs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodEntry.Calories" class="control-label"></label>
                <input asp-for="FoodEntry.Calories" class="form-control" value="@Model.Calories"/>
                <span asp-validation-for="FoodEntry.Calories" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
